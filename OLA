    <script>
        $(document).ready(function() {
            // 点击表格行显示详情
            $('.product-table tbody tr').click(function() {
                // 获取商品数据
                const id = $(this).data('id');
                const name = $(this).data('name');
                const price = $(this).data('price');
                const stock = $(this).data('stock');
                const category = $(this).data('category');
                const desc = $(this).data('desc');
                
                // 设置图片（根据ID使用不同的占位图）
                $('#detail-image').attr('src', `https://via.placeholder.com/300/3498db/ffffff?text=${encodeURIComponent(name)}`);
                
                // 填充详情数据
                $('#detail-name').text(name);
                $('#detail-price').text('¥' + price);
                $('#detail-category').text(category);
                $('#detail-desc').text(desc);
                
                // 设置库存状态及样式
                const stockElement = $('#detail-stock');
                stockElement.text(stock);
                stockElement.removeClass('in-stock low-stock out-of-stock');
                
                if (stock === '充足') {
                    stockElement.addClass('stock in-stock');
                } else if (stock === '不足') {
                    stockElement.addClass('stock low-stock');
                } else {
                    stockElement.addClass('stock out-of-stock');
                }
                
                // 显示弹窗
                $('#productModal').addClass('active');
            });
            
            // 关闭弹窗
            $('.close-btn').click(function() {
                $('#productModal').removeClass('active');
            });
            
            // 点击弹窗外部关闭
            $(document).on('click', function(e) {
                if ($(e.target).hasClass('modal-overlay')) {
                    $('#productModal').removeClass('active');
                }
            });
            
            // 按ESC键关闭弹窗
            $(document).keyup(function(e) {
                if (e.key === "Escape") {
                    $('#productModal').removeClass('active');
                }
            });
        });
    </script>
