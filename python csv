import csv

def read_csv_column_by_name(filename, column_name):
    column_data = []
    with open(filename, 'r', encoding='utf-8') as file:
        reader = csv.DictReader(file)
        for row in reader:
            column_data.append(row[column_name])
    return column_data

# 使用示例
data = read_csv_column_by_name('your_file.csv', 'column_name')
print(data)