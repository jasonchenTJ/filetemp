    <script>
        // 显示消息条函数
        function showMessage(message = "操作成功", duration = 3000) {
            // 如果已有消息条，先移除
            $('.message-bar').remove();
            
            // 创建消息条HTML
            $('<div class="message-bar"><div class="message-content"><span class="message-icon">✓</span> <span>' + message + '</span></div><button class="close-btn">×</button></div>')
                .appendTo('body')
                .addClass('show');
            
            // 设置自动隐藏
            let timer = setTimeout(function() {
                $('.message-bar').addClass('hiding');
                setTimeout(function() {
                    $('.message-bar').remove();
                }, 300);
            }, duration);
            
            // 点击关闭按钮
            $('.close-btn').on('click', function() {
                clearTimeout(timer);
                $('.message-bar').addClass('hiding');
                setTimeout(function() {
                    $('.message-bar').remove();
                }, 300);
            });
        }
        
        // 绑定按钮事件
        $('#showMessage').click(function() {
            showMessage();
        });
        
        $('#autoHide').click(function() {
            showMessage("操作成功，3秒后消失", 3000);
        });
        
        $('#customMsg').click(function() {
            showMessage("这是一个自定义的成功消息！", 5000);
        });
    </script>
